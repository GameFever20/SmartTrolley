<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.smarttrolley.appforyou.smarttrolley">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StoreAddItem"
            android:label="@string/title_activity_store_add_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StoreAddOffer"
            android:label="@string/title_activity_store_add_offer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OfferActivity"
            android:label="@string/title_activity_offer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ShopkeeperActivity" />
        <activity android:name=".EbillPaymentActivity" />
        <activity
            android:name=".ThankYouActivity"
            android:label="@string/title_activity_thank_you"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ShopkeeperPassword"></activity>
    </application>

</manifest>